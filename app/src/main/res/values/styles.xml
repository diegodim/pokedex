<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TextView.Name" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="Theme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/spacing_small</item>
    </style>

    <style name="Theme.TextView.Id" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.20</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="Theme.ImageView.Pokemon" parent="Theme.MaterialComponents">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:alpha">0.40</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Theme.TextView.Type" parent="android:TextAppearance">
        <item name="android:background">@drawable/background_rounded</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="AppTheme.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textSize">48sp</item>
    </style>
</resources>