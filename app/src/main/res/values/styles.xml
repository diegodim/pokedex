<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TextView.Name" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="Theme.TextView.Content" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="Theme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/spacing_small</item>+
    </style>

    <style name="Theme.TextView.Id" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.20</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="Theme.ImageView.Pokeball" parent="Theme.MaterialComponents">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:alpha">0.40</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Theme.TextView.Type" parent="android:TextAppearance">
        <item name="android:background">@drawable/background_rounded</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>
    <style name="Theme.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/black_40</item>
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>
    <style name="Theme.CollapsingToolbar.Collapsed.Background" parent="Theme.CollapsingToolbar.Collapsed">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Theme.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black_40</item>
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="Theme.CollapsingToolbar.Expanded.Background" parent="Theme.CollapsingToolbar.Expanded">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>